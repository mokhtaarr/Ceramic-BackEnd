@model UserDto

<div class="d-flex justify-content-center align-items-center">
    <div class="col-12 col-sm-6">
        <div style="color:red" asp-validation-summary="ModelOnly"></div>
        <form method="post" asp-controller="User" asp-action="SignUp" class="p-4">
            <h3 style="color:#009CFF;"> SignUp Page</h3>
            <div class="form-floating">
                <input asp-for="FirstName" type="text" class="form-control" id="floatingInputFirstName">
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" style="color:red"></span>
            </div>

            <div class="form-floating mt-2">
                <input asp-for="LastName" type="text" class="form-control" id="floatingInputLastName">
                <label asp-for="LastName"></label>
                <span asp-validation-for="LastName" style="color:red"></span>
            </div>

            <div class="form-floating mt-2">
                <input asp-for="UserName" type="text" class="form-control" id="floatingInputUserName">
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" style="color:red"></span>
            </div>

            <div class="form-floating mt-2">
                <input asp-for="Email" type="text" class="form-control" id="floatingInputEmail">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" style="color:red"></span>
            </div>

            <div class="form-floating mt-2">
                <input asp-for="Password" type="password" class="form-control" id="floatingInputPassword">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" style="color:red"></span>
            </div>

            <div class="form-floating mt-2">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingInputConfirmPassword">
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" style="color:red"></span>
            </div>

            <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">Sign Up</button>
        </form>
    </div>
</div>
