@model CreateUserDto

<div class="d-flex justify-content-center align-items-center">
    <div class="col-12 col-sm-6">
        <div style="color:red" asp-validation-summary="ModelOnly"></div>
        <form method="post" asp-controller="User" asp-action="CreateUser" class="p-4">
            <h3 style="color:#009CFF;"> Create User </h3>
          
            <div class="form-floating mt-2">
                <input asp-for="userName" type="text" class="form-control" id="floatingInputFirstName">
                <label asp-for="userName"></label>
                <span asp-validation-for="userName" style="color:red"></span>
            </div>

            <div class="form-floating mt-2">
                <input asp-for="City" type="text" class="form-control" id="floatingInputFirstName">
                <label asp-for="City"></label>
                <span asp-validation-for="City" style="color:red"></span>
            </div>

            <div class="form-floating mt-2">
                <input asp-for="Street" type="text" class="form-control" id="floatingInputFirstName">
                <label asp-for="Street"></label>
                <span asp-validation-for="Street" style="color:red"></span>
            </div>

            <div class="form-floating mt-2">
                <input asp-for="PhoneNumber" type="text" class="form-control" id="floatingInputFirstName">
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" style="color:red"></span>
            </div>

           

            <div class="form-floating mt-2">
                <input asp-for="Email" type="text" class="form-control" id="floatingInputEmail">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" style="color:red"></span>
            </div>

            <div class="form-floating mt-2">
                <input asp-for="Password" type="password" class="form-control" id="floatingInputPassword">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" style="color:red"></span>
            </div>

            <div class="form-floating mt-2">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="floatingInputConfirmPassword">
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" style="color:red"></span>
            </div>

            <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">Sign Up</button>
        </form>
    </div>
</div>


                
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}