@model IPagedList<dynamic>

@{
    ViewData["Title"] = "Our Customer";
}
<link href="~/content/pagedlist.css" rel="stylesheet" />

<h2>
    <i class="fa fa-user" aria-hidden="true"></i> Our Customer
</h2>

<hr />

<div class="mt-4">
    @if (!Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            no Customer Found!
        </div>
    }
    else
    {
        
         <form id="frmCreate" method="post" asp-action="search">
            <div class="row d-flex justify-content-end">

                <div class="col-md-2">
                    <div class="mb-3 custom-form mt-4">
                        <a class="btn btn-outline-secondary" asp-action="index">إلغاء</a>

                        <button type="submit" class="btn btn-primary">بحث </button>

                    </div>
                </div>


                <div class="col-md-4">
                    <div class="mb-3 custom-form">
                        <label for="productname" class="d-flex justify-content-end">ابحث برقم التلفون</label>
                        <input class="form-control mr-sm-2" type="search" placeholder="ابحث" name="phone"
                               style="margin-right:5px;margin-left:10px;direction:rtl" value="@ViewBag.Term" />
                    </div>
                </div>

            </div>
        </form>


        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th scope="col">customer Name</th>
                        <th scope="col">customer Code</th>
                        <th scope="col">mobile</th>
                        <th scope="col">city</th>
                        <th scope="col">country</th>
                        <th scope="col">street</th>
                        <th scope="col">mark</th>
                        <th scope="col">building</th>
                        <th scope="col">floor</th>
                        <th scope="col">apartment</th>
                        <th scope="col">Category</th>
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model)
                    {
                        <tr class="p">
                            <td>@customer.CustomerDescA</td>
                            <td>@customer.Tel</td>
                            <td>@customer.Tel</td>
                            <td>@customer.Address</td>
                            <td>@customer.Address2</td>
                            <td>@customer.Address3</td>
                            <td>@customer.Remarks</td>
                            <td>@customer.AddField1</td>
                            <td>@customer.AddField2</td>
                            <td>@customer.AddField3</td>
                            <td>@customer.CatDescA</td>

                            <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-CustomerId="@customer.CustomerId">Edit</a></td>
                            <td>
                                <a href="javascript:;" class="btn btn-danger js-delete m-1" data-id="@customer.CustomerId">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @Html.PagedListPager(Model, pageIndex => Url.Action("Index", new { pageIndex  }) )

    }
    
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('.js-delete').on('click', function () {
                var btn = $(this);

                bootbox.confirm({
                    message: "هل انت متاكد انك تريد مسح هذا المستخدم ؟",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-outline-secondary'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: '/OurCustomer/delete/' + btn.data('id'),
                                success: function () {
                                    var ComplaintContainer = btn.parents('.p');
                                    ComplaintContainer.addClass('animate__animated animate__zoomOut');

                                    setTimeout(function () {
                                        ComplaintContainer.remove();
                                    }, 1000);

                                    toastr.success('تم المسح بنجاح');
                                },
                                error: function () {
                                    toastr.error('حدث خطا اثناء مسح  المستخدم!');
                                }
                            });
                        }
                    }
                });
            });
        });
    </script>
}