@model MsSalesItemsOffer




<div class="mt-4">
    @if (Model == null)
    {
        <div class="alert alert-warning" role="alert">
            لا توجد عروض
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th scope="col">وصف العرض بالعربى</th>
                        <th scope="col">وصف العرض بالانجليزى</th>
                        <th scope="col">تعديل</th>
                     
                    </tr>
                </thead>
                <tbody>
                        <tr class="p">
                        <td>@Model.Name1</td>
                        <td>@Model.Name2</td>
                        <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-PromoOfferId="@Model.PromoOfferId">Edit</a></td>
                        </tr>
                </tbody>
            </table>
        </div>
    }
</div>
