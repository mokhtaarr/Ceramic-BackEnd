@model MsSalesItemsOffer
@{
    ViewData["Title"] = "Discount Form";
}

<h2>Edit Discount</h2>


<hr />

<section class="row">
    <div class="col-md-5">
        <form method="POST" asp-action="Edit" >
            <input type="hidden" asp-for="PromoOfferId" />
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label text-muted">ِDiscount Arabic</label>
                <input type="text" class="form-control" asp-for="Name1" maxlength="50">
                <span asp-validation-for="Name1" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label text-muted">ِDiscount English</label>
                <input type="text" class="form-control" asp-for="Name2" maxlength="50">
                <span asp-validation-for="Name2" class="text-danger"></span>
            </div>

    

            <button type="submit" class="btn btn-primary"><i class="bi bi-check"></i> Save</button>
            <a asp-controller="Discount" asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-x"></i> Cancel</a>
        </form>
    </div>
    </section>