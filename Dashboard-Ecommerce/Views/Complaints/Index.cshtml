@model IPagedList<SrComplaint>

@{
    ViewData["Title"] = "users complaint";
}

<link href="~/content/pagedlist.css" rel="stylesheet" />

<h2>View All user complaints</h2>
<hr />

<div class="mt-4">
    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            no user complaint Found!
        </div>
    }
    else
    {
         <form id="frmCreate" method="post" asp-action="search">
            <div class="row d-flex justify-content-end">

                <div class="col-md-2">
                    <div class="mb-3 custom-form mt-4">
                        <a class="btn btn-outline-secondary" asp-action="index">إلغاء</a>

                        <button type="submit" class="btn btn-primary">بحث </button>

                    </div>
                </div>


                <div class="col-md-4">
                    <div class="mb-3 custom-form">
                        <label for="productname" class="d-flex justify-content-end">ابحث برقم التلفون</label>
                        <input class="form-control mr-sm-2" type="search" placeholder="ابحث" name="phone"
                               style="margin-right:5px;margin-left:10px;direction:rtl" value="@ViewBag.Term" />
                    </div>
                </div>

            </div>
        </form>


        <div class="row">
            @foreach(var complaint in Model)
            {
          
                <div class="col-12">
                    <div class="card mb-3">
                        <div class="row no-gutters">
                            <div class="col-md-2 poster" style="background-image : url(@($"{ViewBag.ImagePath}{complaint.image}"));background-size:cover;max-height:236px"></div>
                            <div class="col-md-10">
                                <div class="card-body d-flex flex-column justify-content-between h-100">
                                    <div>
                                        <p class="card-text">phone : @complaint.Phone</p>
                                        <p class="card-text">Email : @complaint.Email</p>
                                        <p class="card-text">Complaint Description : @complaint.ComDesc</p>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <p class="card-text mb-0 mt-2">
                                           
                                        </p>
                                        <div>
                                            <a asp-action="EmailReplay" asp-route-id="@complaint.ComId" class="btn btn-outline-primary m-1">
                                                <i class="bi bi-pencil"></i>
                                                Reply
                                            </a>
                                            <a href="javascript:;" class="btn btn-danger js-delete m-1" data-id="@complaint.ComId">
                                                <i class="bi bi-trash"></i>
                                                Delete
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

           
        </div>

        @Html.PagedListPager(Model, pageIndex => Url.Action("Index", new { pageIndex }))

    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.js-delete').on('click', function () {
                var btn = $(this);

                bootbox.confirm({
                    message: "هل انت متاكد انك تريد مسح هذه الشكوى ؟",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-outline-secondary'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.ajax({
                                url: '/Complaints/delete/' + btn.data('id'),
                                success: function () {
                                    var ComplaintContainer = btn.parents('.col-12');
                                    ComplaintContainer.addClass('animate__animated animate__zoomOut');

                                    setTimeout(function () {
                                        ComplaintContainer.remove();
                                    }, 1000);

                                    toastr.success('تم مسح الشكوى بنجاح');
                                },
                                error: function () {
                                    toastr.error('حدث خطا اثناء مسح الشكوى!');
                                }
                            });
                        }
                    }
                });
            });
        });
    </script>
}