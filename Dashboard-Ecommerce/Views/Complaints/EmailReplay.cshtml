@model complaintDto


@{
    ViewData["Title"] = "Reply complaint";
}

<h2>Reply to the complaint</h2>
<hr />

<form asp-action="SendEmailReplay" enctype="multipart/form-data">
    <input type="hidden" asp-for="ComId">

    <div class="form-floating mb-3">
        <input type="text" class="form-control" id="floatingInput" asp-for="Subject">
        <label for="floatingInput">Subject</label>
    </div>

    <div class="form-floating">
        <textarea asp-for="Remarks" class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"></textarea>
        <label for="floatingTextarea2">Complaint Text</label>
    </div>

    <div class="form-group mt-3">
        <label for="Attachments">Attachments</label>
        <input type="file" asp-for="Image" multiple class="form-control" />
    </div>


    <button type="submit" class="btn btn-primary mt-4">Submit</button>

</form>